{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++.exe build game of life",
			"command": "C:\\msys64\\mingw64\\bin\\g++.exe",
			"args": [
				"-march=native",
				"-O3",
				
				"${workspaceFolder}\\src\\*.cpp",
				"${workspaceFolder}\\src\\utility\\*.cpp",
				"${workspaceFolder}\\src\\glad.c",
				
				"-I${workspaceFolder}\\include",

				"-lglfw3",
				"-lgdi32",

				"-o",
				"${workspaceFolder}\\bin\\gameoflife.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "C/C++: g++.exe build find_net_v3",
			"command": "C:\\msys64\\mingw64\\bin\\g++.exe",
			"args": [
				"-march=native",
				"-O3",
				"-Wno-narrowing",
				
				"${workspaceFolder}\\src\\find_net_v3\\main.cpp",
				
				"-o",
				"${workspaceFolder}\\bin\\findnet_v3.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "C/C++: g++.exe build find_net_v3 tests",
			"command": "C:\\msys64\\mingw64\\bin\\g++.exe",
			"args": [
				"-march=native",
				"-O3",
				"-Wno-narrowing",
				
				"${workspaceFolder}\\src\\find_net_v3\\test_find_net.cpp",
				
				"-o",
				"${workspaceFolder}\\bin\\test_findnet_v3.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}