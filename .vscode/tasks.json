{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++.exe build game of life",
			"command": "C:\\msys64\\mingw64\\bin\\g++.exe",
			"args": [
				"-march=native",
				"-O3",
				
				"${workspaceFolder}\\src\\*.cpp",
				"${workspaceFolder}\\src\\utility\\*.cpp",
				"${workspaceFolder}\\src\\glad.c",
				
				"-I${workspaceFolder}\\include",

				"-L${workspaceFolder}\\lib\\lib-mingw-w64",
				"-lglfw3",
				"-lgdi32",

				"-o",
				"${workspaceFolder}\\bin\\gameoflife.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "C/C++: g++.exe build find_net",
			"command": "C:\\msys64\\mingw64\\bin\\g++.exe",
			"args": [
				"-march=native",
				"-O3",
				"-Wno-narrowing",
				
				"${workspaceFolder}\\src\\find_net\\main.cpp",
				
				"-o",
				"${workspaceFolder}\\bin\\findnet.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "C/C++: g++.exe build tests",
			"command": "C:\\msys64\\mingw64\\bin\\g++.exe",
			"args": [
				"-march=native",
				"-O3",
				"-Wno-narrowing",
				
				"${workspaceFolder}\\src\\utility\\*.cpp",
				"${workspaceFolder}\\src\\tests\\run_tests.cpp",
				
				"-o",
				"${workspaceFolder}\\bin\\run_tests.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}